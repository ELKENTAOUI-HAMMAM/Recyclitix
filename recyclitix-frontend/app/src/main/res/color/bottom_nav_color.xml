<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Couleur quand l'élément est sélectionné -->
    <item android:color="@color/successGreen" android:state_checked="true" />
    <!-- Couleur quand l'élément est activé/pressé -->
    <item android:color="@color/successGreen" android:state_pressed="true" />
    <!-- Couleur par défaut (non sélectionné) -->
    <item android:color="@color/textColorSecondary" />
</selector>